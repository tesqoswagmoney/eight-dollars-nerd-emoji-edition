{
    "manifest_version":  3,
    "name":  "Eight Dollars Nerd Emoji Edition",
    "version":  "1.6",
    "description":  "Eight Dollars can help you tell the difference between actual verified accounts and twitter blue NERDS.",
    "icons":  {
                  "16":  "./assets/16.png",
                  "32":  "./assets/32.png",
                  "48":  "./assets/48.png",
                  "256":  "./assets/256.png",
                  "512":  "./assets/512.png"
              },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "https://twitter.com/*",
                                                "https://mobile.twitter.com/*"
                                            ],
                                "js":  [
                                           "content.js"
                                       ]
                            }
                        ],
    "web_accessible_resources":  [
                                     {
                                         "resources":  [
                                                           "script.js",
                                                           "search.js"
                                                       ],
                                         "matches":  [
                                                         "https://twitter.com/*",
                                                         "https://mobile.twitter.com/*"
                                                     ]
                                     }
                                 ],
    "action":  {
                   "default_icon":  {
                                        "16":  "./assets/16.png",
                                        "32":  "./assets/32.png"
                                    },
                   "default_title":  "Eight Dollars - Options",
                   "default_popup":  "options/options.html"
               },
    "permissions":  [
                        "storage"
                    ]
}
